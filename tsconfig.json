{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmit": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es5"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "source-map",
            "webpack"
        ]
    },
    "include": [
        "src/app.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}